{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "lib": ["esnext", "dom"],
        "types": ["jest", "vite/client"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "exclude": ["node_modules", "dist", "public", "tests"]
}
